<div class="row-section">
    <div class="row-item"> 
        <label>Farm Name</label>
        <input type="text" name="name" value="<%= farm.name %>">
    </div>
    <div class="row-item">
        <label>Agricultural Produce</label>
        <input type="text" name="produce" value="<%= farm.produce %>">
    </div>
</div>

<div class="row-section">
    <div class="row-item">
        <label>Location</label>
        <input type="text" name="location" value="<%= farm.location %>">
    </div>
    <div class="row-item">
        <label>Image</label>
        <input type="file" name="image">
    </div>
</div>


<div class="row-item">
    <label>Description</label>
    <textarea name="description"><%= farm.description %></textarea>
</div>


